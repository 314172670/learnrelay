.root
    padding 90px
    max-width 830px
    margin 0 auto
    // background red

  header

    border-bottom 1px solid rgba(0,0,0,0.09)

    h1, h2
      line-height 1

    h1
      font-size 70px
      color var(--color-accent)
      font-weight 100
      margin 0
      line-height 1

    h2
      font-size 40px
      font-weight 100
      color #7F7F7F
      margin 30px 0 40px


